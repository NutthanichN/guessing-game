<!DOCTYPE html>
<html>
  <body>
    <h1>
        Alphabet Guessing Game
    </h1>
    <p>Adapt from PHP version by Nutthanich Narphromar 6110545490</p>

    <% if (startButton) { %>
      <a href="">Start</a>
    <% } else { %>
      <h2>Please choose A, B, C or D to 
        <% if (mode) { %>
          <%= mode %>
        <% } %>
         the 
        <% if (charOrder) { %>
          <%= charOrder %>
        <% } %>
         character
      </h2>
      
      <% if (question) { %>
        <h3>Question: 
          <%= question %>
        </h3>
      <% } %>

      <% if (guessing) { %>
        <h3>Character(s) remaining: <%= guessing %></h3>
      <% } %>
      
      <% if (answer) { %>
        <h3>Answer: <%= answer %></h3>
      <% } %>
      

      <h3>Choose: 
          <button>A</button>
          <button>B</button>
          <button>C</button>
          <button>D</button>
      </h3>

      <% if (miss) { %>
        <p>Miss: <%= miss %></p>
      <% } %>
      
    <% } %>
  </body>
</html>